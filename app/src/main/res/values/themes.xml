<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Banksmsmanager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Banksmsmanager" parent="Base.Theme.Banksmsmanager" />

    <style name="Theme.Banksmsmanager.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">32dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">32dp</item>
    </style>

    <style name="Theme.Banksmsmanager.AppWidgetContainer" parent="Theme.Banksmsmanager.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
    <style name="Theme.Banksmsmanager.AppWidgetContainer.Text" parent="android:Widget.TextView" >
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>